	gcc $(PROJECT_NAME)_1_2.c -o $(PROJECT_NAME)_1_2.out
	./$(PROJECT_NAME)_1_2.out

$(PROJECT_NAME)_2_1:
	gcc $(PROJECT_NAME)_2_1.c -o $(PROJECT_NAME)_2_1.out
	./$(PROJECT_NAME)_2_1.out

$(PROJECT_NAME)_2_2:
	gcc $(PROJECT_NAME)_2_2.c -o $(PROJECT_NAME)_2_2.out
	./$(PROJECT_NAME)_2_2.out

clean:
	rm -rf *.out *.o *.a *.so *.out *.bin